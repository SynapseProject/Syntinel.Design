{
    "name": "Utilization",
    "description": "EC2 Utilization Montior",
    "allowMultipleReplies": false,
    "cues": 
    {
        "ec2": {
            "name": "EC2 Resize",
            "description": "Server [MySimpleLinuxServer] has been running for 7 days.  Would you like to take action against it?",
            "resolver": {
                "function": "syntinel-resolver-ec2utils",
                "config": {
                    "instances": ["i-06faaae2b4e00f1f5"]
                }
            },
            "inputs": [
                {
                    "name": "delay",
                    "description": "Delay Action Duration (in minutes).",
                    "type": "number",
                    "defaultValue": "0"
                },
                {
                    "name": "comments",
                    "description": "Insert Comments Below.",
                    "type": "text",
                    "defaultValue": "Default Comment Here"
                },
                {
                    "name": "notify",
                    "description": "Email me on completion.",
                    "type": "boolean",
                    "defaultValue": "false"
                },
                {
                    "name": "day-of-the-week",
                    "description": "Choose the day of the week.",
                    "type": "choice",
                    "values": [
                        { "monday": "Monday" },
                        { "tuesday": "Tuesday" },
                        { "wednesday": "Wednesday" },
                        { "thursday": "Thursday" },
                        { "friday": "Friday" },
                        { "saturday": "Saturday" },
                        { "sunday": "Sunday" }
                    ],
                    "allowMultipleValues": true,
                    "defaultValue": "weekday"
                }
            ],
            "actions": [
                {
                    "name": "Perform Action",
                    "description": "Indicates action to take against EC2 instances.",
                    "type": "choice",
                    "values": [
                        { "stop": "Stop Instance" },
                        { "terminate": "Terminate Instance" },
                        { "reboot": "Reboot Instance" },
                        { "hibernate": "Stop and Hibernate Instance"}
                    ],
                    "defaultValue": "stop"
                },
                {
                    "name": "Ignore Alert",
                    "description": "Ingore this alert.",
                    "type": "button",
                    "defaultValue": "ignore"             
                },
                {
                    "name": "Disable Alert",
                    "description": "Disable this alert.",
                    "type": "button",
                    "defaultValue": "disable"               
                },
                {
                    "name": "Help",
                    "description": "Get Help.",
                    "type": "link",
                    "defaultValue": "help"               
                }
            ],
            "defaultAction": "Perform Action"
        }
    },
    "defaultCue": "ec2",
    "defaultCueTimeout": 4320
}