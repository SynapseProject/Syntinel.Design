{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "name", "description", "signal", "cues" ],
    "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "allowMultiple": { "type": "boolean" },
        "signal": { 
            "type": "object",
            "properties": {
                "reporterId": { "type": "integer" },
                "type": { "type": "string" },
                "group": { "type": "string" },
                "id": { "type": "string" }
            }
        },
        "cues": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "required": [ "name", "description", "resolver" ],
                "properties": {
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "resolver": {
                        "type": "object",
                        "required": [ "type" ],
                        "properties": {
                            "type": { "type": "string" },
                            "action": { "type": "string" },
                            "variables": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "required": ["name", "type"],
                                    "properties": {
                                        "name": { "type": "string" },
                                        "type": { "type": "string" },
                                        "defaultValue": { "type": "string" },
                                        "options": { "type": "array" }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "defaultCue": { "type": "string" },
        "defaultCueTimeout": { "type": "integer" }
    }
}